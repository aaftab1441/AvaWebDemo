<UserControl 
  
  x:Class   ="AvaWebDemoApp.MainView"
  
  xmlns     ="https://github.com/avaloniaui"
  xmlns:x   ="http://schemas.microsoft.com/winfx/2006/xaml"
  
 
  Background="#C2DFF7">
  
  <Border Margin          ="16"
          BorderBrush     ="Crimson"
          BorderThickness ="2">

    <Grid Margin="32">
      <Grid.RowDefinitions>
        <RowDefinition Height="25"/>
        <RowDefinition Height="25"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="360"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBlock  Grid.Row="0"  Text="some label"/>
      <TextBox    Grid.Row="1"  />
    </Grid>
  
</Border>
</UserControl>
